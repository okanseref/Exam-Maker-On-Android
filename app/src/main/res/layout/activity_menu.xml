<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsmall"
    android:orientation="vertical"
    tools:context="tr.STD17011042.OkanSeref.Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menuImage"
            android:layout_width="161dp"
            android:layout_height="174dp"
            android:background="#548A401D"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/menuUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="TextView"
            android:textColor="#1B0909"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95">

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/menuNewQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonbluesquare"
                android:drawableTop="@drawable/question"
                android:drawableTint="#7A328E11"
                android:drawableTintMode="src_atop"
                android:gravity="center"
                android:minHeight="48dip"
                android:padding="24dp"
                android:text="Add New Question"
                android:textSize="14dp" />

            <android.widget.Button
                android:id="@+id/examSettings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonbluesquare"
                android:drawableTop="@drawable/gear"
                android:gravity="center"
                android:padding="24dp"
                android:text="EXAM SETTINGS"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/menuListQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonbluesquare"
                android:drawableTop="@drawable/list"
                android:gravity="center"
                android:padding="24dp"
                android:text="Question List"
                android:textSize="14dp" />

            <android.widget.Button
                android:id="@+id/newExam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonbluesquare"
                android:drawableTop="@drawable/exam"
                android:gravity="center"
                android:padding="24dp"
                android:text="NEW EXAM"
                android:textSize="14dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5" />

</LinearLayout>